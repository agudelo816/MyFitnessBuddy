<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="squad.myfitnessbuddy.Setup">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_mfb"
        android:id="@+id/welcome"
        android:textSize="@dimen/header_text_size"
        android:textAlignment="center"
        android:nestedScrollingEnabled="true"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="@color/textHeading"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/first_name"
        android:id="@+id/profileFirstName"
        android:textSize="@dimen/primary_text_size"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:typeface="sans"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@id/welcome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userFirstName"
        android:textColor="@android:color/black"
        android:textSize="@dimen/primary_text_size"
        android:background="@drawable/rectangle_corners"
        android:layout_below="@id/profileFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:typeface="sans"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/last_name"
        android:id="@+id/profileLastName"
        android:textSize="@dimen/primary_text_size"
        android:textStyle="bold"
        android:typeface="sans"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@id/userFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userLastName"
        android:background="@drawable/rectangle_corners"
        android:layout_below="@id/profileLastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textSize="@dimen/primary_text_size"
        android:textColor="@android:color/black"
        android:typeface="sans"
        android:textAlignment="center"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        android:id="@+id/profileAge"
        android:textSize="@dimen/primary_text_size"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#000000"
        android:layout_below="@id/userLastName"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/userAge"
        android:background="@drawable/rectangle_corners"
        android:textSize="@dimen/primary_text_size"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:layout_below="@id/profileAge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:typeface="sans"
        android:layout_marginLeft="10dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gender"
        android:id="@+id/profileGender"
        android:textSize="@dimen/primary_text_size"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_above="@id/userAge"
        android:layout_marginRight="35dp"
        android:textColor="#000000"
        android:layout_alignEnd="@+id/userLastName"
        android:layout_marginTop="5dp" />

    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignTop="@id/userAge"
        android:layout_alignEnd="@id/userLastName"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_male"
            android:id="@+id/male"
            android:checked="false"
            android:textSize="@dimen/primary_text_size"
            android:layout_marginTop="5dp"
            android:buttonTint="#2a6aa6" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_female"
            android:id="@+id/female"
            android:checked="false"
            android:textSize="@dimen/primary_text_size"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:buttonTint="#fcae2d96" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height"
        android:id="@+id/profileHeight"
        android:layout_below="@id/userAge"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/primary_text_size"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="30dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="5"
        android:id="@+id/userHeight"
        android:background="@drawable/rectangle_corners"
        android:textSize="@dimen/primary_text_size"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:layout_below="@id/profileHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:typeface="sans"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:hint="@string/height_type" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        android:id="@+id/weight"
        android:textSize="@dimen/primary_text_size"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#000000"
        android:layout_above="@+id/userWeight"
        android:layout_marginRight="35dp"
        android:layout_alignEnd="@id/userLastName"
        android:layout_alignTop="@id/profileHeight" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="5"
        android:id="@+id/userWeight"
        android:background="@drawable/rectangle_corners"
        android:textSize="@dimen/primary_text_size"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:typeface="sans"
        android:textAlignment="center"
        android:hint="@string/weight_type"
        android:layout_alignTop="@id/userHeight"
        android:layout_alignRight="@id/userLastName"
        android:layout_alignEnd="@id/userLastName"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_button"
        android:id="@+id/button"
        android:background="#d8d8d8"
        android:textSize="@dimen/primary_text_size"
        android:textStyle="bold"
        android:minWidth="100dp"
        android:onClick="saveSetUp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

</RelativeLayout>
