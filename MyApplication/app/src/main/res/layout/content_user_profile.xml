<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="squad.myfitnessbuddy.UserProfile">

    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="editProfileOnClick"
        android:textAllCaps= "false"
        android:text="@string/edit_profile_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        style="?android:borderlessButtonStyle" />

    <TableLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:stretchColumns="0">

        <TextView
            android:id="@+id/fullNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingBottom="10dp"
            android:text="@string/full_name"
            android:textAlignment="center"
            android:textColor="@color/textHeading"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold" />

        <TableRow android:layout_gravity="right">

            <TextView
                android:id="@+id/ageLabel"
                android:text="@string/age"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size"
                android:typeface="sans" />

            <TextView
                android:id="@+id/ageTV"
                android:text="@string/test"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size" 
                android:typeface="sans" />

        </TableRow>

        <TableRow android:layout_gravity="right">

            <TextView
                android:id="@+id/genderLabel"
                android:text="@string/gender"
			    android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size"
                android:typeface="sans" />

            <TextView
                android:id="@+id/genderTV"
                android:text="@string/test"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size"
                android:typeface="sans" />

        </TableRow>

        <TableRow android:layout_gravity="right">

            <TextView
                android:id="@+id/heightLabel"
                android:text="@string/height"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size"
                android:typeface="sans" />

            <TextView
                android:id="@+id/heightTV"
                android:text="@string/test"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size"
                android:typeface="sans" />

        </TableRow>

        <TableRow android:layout_gravity="right">

            <TextView
                android:id="@+id/weightLabel"
                android:text="@string/weight"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size"
                android:typeface="sans" />

            <TextView
                android:id="@+id/weightTV"
                android:text="@string/test"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size"
                android:typeface="sans" />

        </TableRow>

        <TableRow android:layout_gravity="right">

            <TextView
                android:id="@+id/bmiLabel"
                android:text="@string/bmi"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size"
                android:typeface="sans" />

            <TextView
                android:id="@+id/bmiTV"
                android:text="@string/test"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size"
                android:typeface="sans" />

        </TableRow>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/metabolicRatesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="@string/metabolic_rates"
                android:textColor="@color/textHeading"
                android:textSize="@dimen/header_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/caloriesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/calorie_note"
				android:textColor="@color/textPrimary"
                android:textSize="15sp" />

        </LinearLayout>

        <TableRow
            android:layout_gravity="right"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/sedentaryLabel"
                android:text="@string/sedentary"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size" />

            <TextView
                android:id="@+id/sedentaryTV"
                android:text="@string/test"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size" />

        </TableRow>

        <TableRow android:layout_gravity="right">

            <TextView
                android:id="@+id/lightlyActiveLabel"
                android:text="@string/lightly_active"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size" />

            <TextView
                android:id="@+id/lightlyActiveTV"
                android:text="@string/test"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size" />

        </TableRow>

        <TableRow android:layout_gravity="right">

            <TextView
                android:id="@+id/moderatelyActiveLabel"
                android:text="@string/moderately_active"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size" />

            <TextView
                android:id="@+id/moderatelyActiveTV"
                android:text="@string/test"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size" />

        </TableRow>

        <TableRow android:layout_gravity="right">

            <TextView
                android:id="@+id/veryActiveLabel"
                android:text="@string/very_active"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size" />

            <TextView
                android:id="@+id/veryActiveTV"
                android:text="@string/test"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size" />

        </TableRow>

        <TableRow android:layout_gravity="right">

            <TextView
                android:id="@+id/extremelyActiveLabel"
                android:text="@string/extremely_active"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size" />

            <TextView
                android:id="@+id/extremelyActiveTV"
                android:text="@string/test"
				android:textColor="@color/textPrimary"
                android:textSize="@dimen/primary_text_size" />

        </TableRow>

    </TableLayout>


    <LinearLayout
        android:id="@+id/popUpLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="75dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/createWorkoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#d5eae8"
            android:onClick="createWorkoutOnClick"
            android:padding="10dp"
            android:text="CREATE A NEW WORKOUT"
            android:textStyle="bold" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#d5eae8"
            android:minWidth="150dp"
            android:onClick="backOnClick"
            android:padding="10dp"
            android:text="BACK"
            android:textSize="@dimen/primary_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/createWorkoutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/predefinedWorkoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d5eae8"
            android:padding="10dp"
            android:text="Predefined Workout"
            android:textStyle="bold" />

        <Button
            android:id="@+id/customizedWorkoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#d5eae8"
            android:padding="10dp"
            android:text="Customized Workout"
            android:textStyle="bold" />

        <Button
            android:id="@+id/createWorkoutBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#d5eae8"
            android:onClick="createWorkoutBackButton"
            android:padding="10dp"
            android:text="BACK"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mySavedWorkoutsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:visibility="invisible">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/exerciseListLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginBottom="37dp"
            android:background="#d5eae8"
            android:minWidth="100dp"
            android:text="Create Workout"
            android:textSize="@dimen/primary_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        style="@android:style/ButtonBar"
        android:gravity="center"
        android:background="#d8d8d8">

        <Button
            android:id="@+id/logsButtonBar"
            android:layout_width="120dp"
            android:layout_height="56dp"
            android:onClick="viewLogsOnClick"
            android:textAllCaps= "false"
            android:text="@string/logs_button"
            android:paddingTop="6dp"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            style="?android:borderlessButtonStyle" />

        <Button
            android:id="@+id/workoutsButtonBar"
            android:layout_width="120dp"
            android:layout_height="56dp"
            android:onClick="savedWorkoutsOnClick"
            android:textAllCaps= "false"
            android:text="@string/workouts_button"
            android:paddingTop="6dp"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            style="?android:borderlessButtonStyle" />

        <Button
            android:id="@+id/profileButtonBar"
            android:layout_width="120dp"
            android:layout_height="56dp"
            android:onClick="goToProfileOnClick"
            android:textAllCaps= "false"
            android:text="@string/profile_button"
            android:paddingTop="6dp"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            style="?android:borderlessButtonStyle" />

       <!-- <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/drawableTop"
            android:id="@+id/imageButton" /> -->

    </LinearLayout>



</RelativeLayout>
