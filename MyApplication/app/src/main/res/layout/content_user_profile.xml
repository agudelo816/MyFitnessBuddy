<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="squad.myfitnessbuddy.UserProfile">

    <TextView
        android:id="@+id/nameStatus"
        android:text="@string/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25sp" />


    <TextView
        android:id="@id/profileFirstName"
        android:text="@string/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:paddingRight="5dp"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@id/profileLastName"
        android:text="@string/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileFirstName"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ageStatus"
        android:text="@string/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameStatus"
        android:textSize="25sp"        />

    <TextView
        android:id="@id/profileAge"
        android:text="@string/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameStatus"
        android:layout_marginStart="100dp"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/genderStatus"
        android:text="@string/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ageStatus"
        android:textSize="25sp"
        />

    <TextView
        android:id="@id/profileGender"
        android:text="@string/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileAge"
        android:layout_marginStart="100dp"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/heightStatus"
        android:text="@string/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/genderStatus"
        android:textSize="25sp"
        />

    <TextView
        android:id="@id/profileHeight"
        android:text="@string/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/genderStatus"
        android:layout_marginStart="100dp"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/heightNotation"
        android:text="@string/height_type_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/genderStatus"
        android:layout_toEndOf="@id/profileHeight"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weightStatus"
        android:text="@string/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heightStatus"
        android:textSize="25sp"
        />

    <TextView
        android:id="@id/profileWeight"
        android:text="@string/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heightStatus"
        android:layout_marginStart="100dp"
        android:paddingRight="5dp"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weightNotation"
        android:text="@string/weight_type_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heightStatus"
        android:layout_toEndOf="@id/profileWeight"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>
