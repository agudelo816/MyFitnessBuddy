<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="squad.myfitnessbuddy.UserProfile"
    android:textAlignment="textStart">


    <!-- Lifestyles -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:id="@+id/ageTV"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:textSize="25sp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:id="@+id/genderTV"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:textSize="25sp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:id="@+id/heightTV"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:textSize="25sp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:id="@+id/weightTV"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:textColor="#000000"
            android:textSize="25sp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI"
            android:id="@+id/bmiTV"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:textColor="#000000"
            android:textSize="25sp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metabolic Rates"
            android:id="@+id/metabolicRatesTV"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="30sp"
            android:textColor="#bc1717"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(calories)"
            android:id="@+id/caloriesTV"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sedentary"
            android:id="@+id/sedentaryTV"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lightly Active"
            android:id="@+id/lightlyActiveTV"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moderately Active"
            android:id="@+id/moderatelyActiveTV"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Very Active"
            android:id="@+id/veryActiveTV"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extremely Active"
            android:id="@+id/extremelyActiveTV"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:textColor="#000000"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:id="@+id/fullNameTV"
        android:textAlignment="center"
        android:textColor="#bc1717"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:id="@+id/menuButton"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minWidth="100dp"
        android:onClick="menuOnClick"
        android:background="#d5eae8"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fullNameTV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/popUpLayout"
        android:visibility="invisible"
        android:layout_marginTop="75dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE A NEW WORKOUT"
            android:id="@+id/createWorkoutButton"
            android:background="#d5eae8"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:onClick="createWorkoutOnClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY SAVED WORKOUTS"
            android:id="@+id/savedWorkoutsButton"
            android:background="#d5eae8"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIEW WORKOUT LOGS"
            android:id="@+id/workoutLogsButton"
            android:background="#d5eae8"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT USER PROFILE"
            android:id="@+id/editProfileButton"
            android:onClick="editProfileOnClick"
            android:background="#d5eae8"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:id="@+id/backButton"
            android:layout_gravity="center_horizontal"
            android:minWidth="150dp"
            android:onClick="backOnClick"
            android:background="#d5eae8"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/createWorkoutLayout"
        android:visibility="invisible">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Predefined Workout"
            android:id="@+id/predefinedWorkoutButton"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="#d5eae8" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customized Workout"
            android:id="@+id/customizedWorkoutButton"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="#d5eae8"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:id="@+id/createWorkoutBackButton"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="#d5eae8"
            android:layout_marginTop="10dp"
            android:onClick="createWorkoutBackButton" />
    </LinearLayout>

</RelativeLayout>
